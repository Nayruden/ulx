# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# ND has special formatting
[doc/ndinfo/*.txt]
indent_style = space
indent_size = 3
insert_final_newline = true
trim_trailing_whitespace = true

# YAML spec requires spaces
[*.yml]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
